@model AdViewModel;

<div class="container" style="margin-top:30px">
    

        @foreach (AdListing.AdPost ad in Model.Ads)
        { <div class="row" style="margin-top:20px">
              <div class="col-md-6">
                  <h5>@ad.DatePosted</h5>
                  <h5>@ad.Text</h5>
                  <h5>@ad.Name</h5>
                  <h5>@ad.Phone</h5>

                  <br />

                  @if (Model.Session != null)
                  {
                      @if (Model.Session.Contains(ad.Id))
                      {
                          <form method="post" action="/Home/DeletePost">
                              <input type="hidden" name="Id" value="@ad.Id" />
                              <button name="Id" class="btn btn-danger">Delete</button>

                          </form>
                      }

                  }

              </div>
        </div>
      }

</div>
